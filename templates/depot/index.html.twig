{% extends 'base.html.twig' %}

{% block title %}Depot index{% endblock %}

{% block body %}
    <h1>Depot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Iddepot</th>
                <th>Nomdepot</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depot in depots %}
            <tr>
                <td>{{ depot.iddepot }}</td>
                <td>{{ depot.nomdepot }}</td>
                <td>{{ depot.adresse }}</td>
                <td>
                    <a href="{{ path('app_depot_show', {'iddepot': depot.iddepot}) }}">show</a>
                    <a href="{{ path('app_depot_edit', {'iddepot': depot.iddepot}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_depot_new') }}">Create new</a>
{% endblock %}
