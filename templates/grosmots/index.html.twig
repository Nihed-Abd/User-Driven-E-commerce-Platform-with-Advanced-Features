{% extends 'base.html.twig' %}

{% block title %}Grosmots index{% endblock %}

{% block body %}
    <h1>Grosmots index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdGm</th>
                <th>Grosmots</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grosmot in grosmots %}
            <tr>
                <td>{{ grosmot.idGm }}</td>
                <td>{{ grosmot.grosmots }}</td>
                <td>
                    <a href="{{ path('app_grosmots_show', {'idGm': grosmot.idGm}) }}">show</a>
                    <a href="{{ path('app_grosmots_edit', {'idGm': grosmot.idGm}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_grosmots_new') }}">Create new</a>
{% endblock %}
